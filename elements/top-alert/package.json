{
  "name": "@lrnwebcomponents/top-alert",
  "wcfactory": {
    "className": "TopAlert",
    "customElementClass": "HTMLElement",
    "elementName": "top-alert",
    "generator-wcfactory-version": "0.10.0",
    "useHAX": false,
    "useSass": false,
    "files": {
      "css": "src/top-alert.css",
      "scss": "src/top-alert.scss",
      "html": "src/top-alert.html",
      "js": "src/top-alert.js",
      "properties": "src/top-alert-properties.json",
      "hax": "src/top-alert-hax.json"
    },
    "iconset": {},
    "sharedHaxProps": [],
    "sharedProps": [],
    "sharedStyles": []
  },
  "version": "4.0.1",
  "description": "A full width alert that has an important message for the website viewer",
  "repository": {
    "type": "git",
    "url": "https://github.com/elmsln/lrnwebcomponents.git"
  },
  "main": "top-alert.js",
  "module": "top-alert.js",
  "umd": "top-alert.umd.js",
  "scripts": {
    "start": "yarn run dev",
    "build": "gulp --gulpfile=gulpfile.cjs && node --experimental-json-modules ../../node_modules/.bin/rollup --config && prettier --ignore-path ../../.prettierignore --write '**/*.{js,json}' && wca analyze \"**/*.js\" --outFile custom-elements.json",
    "dev": "concurrently --kill-others \"yarn run watch\" \"yarn run serve\"",
    "watch": "gulp dev --gulpfile=gulpfile.cjs",
    "serve": "web-dev-server -c ../../web-dev-server.config.js",
    "lighthouse": "gulp lighthouse --gulpfile=gulpfile.cjs",
    "test:watch": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium firefox --watch",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium firefox"
  },
  "author": {
    "name": "btopro"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "lit": "^2.0.2"
  },
  "devDependencies": {
    "@lrnwebcomponents/deduping-fix": "2.7.7",
    "@open-wc/testing": "3.0.3",
    "@polymer/iron-component-page": "github:PolymerElements/iron-component-page",
    "@polymer/iron-demo-helpers": "3.1.0",
    "@webcomponents/webcomponentsjs": "2.6.0",
    "concurrently": "5.3.0",
    "@web/dev-server": "0.1.28",
    "gulp-babel": "8.0.0",
    "lodash": "^4.17.21",
    "@web/dev-server": "0.1.28",
    "wct-browser-legacy": "1.0.2",
    "web-animations-js": "2.3.2"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "html"
  ]
}
